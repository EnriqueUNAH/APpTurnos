@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, white, orange, black);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 400px;
        }

            .login-container h2 {
                margin-bottom: 1.5rem;
                color: #000000;
            }

        .form-control {
            border-radius: 30px;
            padding: 0.75rem 1.25rem;
            border: 1px solid #ccc;
        }

        .btn-login {
            background-color: #FFA500;
            color: #fff;
            border-radius: 30px;
            padding: 0.75rem;
            width: 100%;
            border: none;
        }

            .btn-login:hover {
                background-color: #FF8C00; /* Anaranjado oscuro al pasar el ratón */
            }

        .form-group input {
            color: #000000; /* Color negro para el texto de los inputs */
        }

        .error {
            color: red;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container text-center">
        <h2>Login</h2>
        <form id="loginForm">
            <div class="form-group">
                <input type="text" class="form-control" id="usuario" placeholder="Usuario" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Contraseña" required>
            </div>
            <button type="submit" class="btn btn-login">Entrar</button>
            <div id="error-message" class="error"></div>
        </form>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const usuario = document.getElementById('usuario').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('error-message');

            // Llamada a la API de usuarios para verificar si el usuario existe
            fetch(`https://localhost:7266/api/Usuario?usuario=${usuario}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error en la red');
                    }
                    return response.json();
                })
                .then(data => {
                    const user = data.find(user => user.usuario === usuario);
                    if (user) {
                        if (user.estado === 1) {
                            // Usuario activo
                            if (user.password != password) { //                 Validar con la api luego----------------------
                                // Entrada al index de la pagina
                                window.location.href = '/home/'; 
                            } else {
                                errorMessage.textContent = 'Contraseña incorrecta';
                            }
                        } else {
                            // Usuario inactivo
                            errorMessage.textContent = 'Cuenta inactiva. Comuníquese con los administradores.';
                        }
                    } else {
                        // Usuario no encontrado
                        errorMessage.textContent = 'Usuario no encontrado';
                    }
                })
                .catch(error => {
                    console.error('Error al verificar el usuario:', error);
                    errorMessage.textContent = 'Error al verificar el usuario';
                });
        });
    </script>
</body>
</html>
