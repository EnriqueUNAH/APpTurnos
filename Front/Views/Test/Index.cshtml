@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

<table id="usuariosTable" class="display">
    <thead>
        <tr>
            <th>ID Usuario</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Rol</th>
            <th>Nombre Área</th>
            <th>Número</th>
            <th>Extensión</th>
            <th>Nombre Zona</th>
            <th>Celular</th>
            <th>Estado</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#usuariosTable').DataTable({
            "ajax": {
                "url": "https://localhost:7266/api/Usuario",
                "dataSrc": ""
            },
            "columns": [
                { "data": "idUsuario" },
                { "data": "usuario" },
                { "data": "nombre" },
                { "data": "rol" },
                { "data": "nombreArea" },
                { "data": "numero" },
                { "data": "extension" },
                { "data": "nombreZona" },
                { "data": "celular" },
                { "data": "estado" },
                { "data": "correo" },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `
                            <button class="edit-btn" onclick="editUser(${data.idUsuario})"><i class="fas fa-edit"></i></button>
                            <button class="delete-btn" onclick="deleteUser(${data.idUsuario})"><i class="fas fa-trash-alt"></i></button>
                        `;
                    }
                }
            ]
        });
    });

    function editUser(id) {
        // Lógica para editar usuario
        alert("Editar usuario: " + id);
    }

    function deleteUser(id) {
        // Lógica para eliminar usuario
        alert("Eliminar usuario: " + id);
    }
</script>
