@{
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Usuarios</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
        }

        h2 {
            margin-top: 20px;
            color: #343a40;
            text-align: center;
        }

        .container {
            margin: 20px auto;
            max-width: 1200px;
            padding: 15px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .dataTables_wrapper {
            margin-top: 20px;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button {
                padding: 0.3em 1em;
                margin-left: 0.3em;
                background-color: #007bff;
                border: none;
                border-radius: 3px;
                color: white;
            }

                .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                    background-color: #0056b3;
                }

        .edit-btn, .delete-btn {
            cursor: pointer;
            padding: 5px;
            border: none;
            background-color: transparent;
        }

        .edit-btn {
            color: #5cb85c; /* Color pastel para editar */
        }

        .delete-btn {
            color: #d9534f; /* Color pastel para eliminar */
        }

        table.dataTable {
            width: 100% !important;
            table-layout: auto;
        }

            table.dataTable thead th {
                background-color: #343a40;
                color: white;
            }

            table.dataTable tbody tr {
                background-color: #f1f1f1;
            }

                table.dataTable tbody tr:nth-child(even) {
                    background-color: #e9ecef;
                }
    </style>
</head>
<body>
    <div class="container">
        <h4><center>Administración de Usuarios</center></h4>

        <table id="usuariosTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>ID Usuario</th>
                    <th>Usuario</th>
                    <th>Nombre</th>
                    <th>Rol</th>
                    <th>Área</th>
                    <th>Número</th>
                    <th>Extensión</th>
                    <th>Zona</th>
                    <th>Celular</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>
    <script src="~/Views/usuarios.js"></script>
</body>
</html>
