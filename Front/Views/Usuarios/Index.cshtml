@section Estilos {
    <link href="~/lib/datatables2/css/datatables.datatables.css" rel="stylesheet" />
}
<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fa-solid fa-user-group"></i>
                Lista de Usuarios
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <button class="btn btn-success" id="btnNuevo" data-bs-toggle="modal" data-bs-target="#addUserModal">
                            <i class="fa-solid fa-plus"></i> Nuevo Usuario
                        </button>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <table class="display cell-border" id="tbData" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Rol</th>
                                    <th>Área</th>
                                    <th>Número</th>
                                    <th>Extensión</th>
                                    <th>Zona</th>
                                    <th>Celular</th>
                                    <th>Estado</th>
                                    <th>Opciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar un nuevo usuario -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Agregar Nuevo Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addUserForm" class="form-horizontal">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="usuario" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="usuario" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="iD_ROL" class="form-label">Rol</label>
                            <select class="form-control" id="iD_ROL" required>
                                <option value="1">Administrador</option>
                                <option value="2">Operador</option>
                                <option value="3">Jefe Tecnico</option>
                                <option value="4">Usuario Común</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="iD_AREA" class="form-label">Área</label>
                        <select class="form-control" id="iD_AREA" required>
                            <option value="1">SERVIDORES</option>
                            <option value="2">REDES Y COMUNICACIÓN</option>
                            <option value="3">DESARROLLO</option>
                            <option value="4">USUARIOS EXPERTOS</option>
                            <option value="5">SOPORTE TECNICO</option>
                            <option value="6">INFRAESTRUCTURA Y TALLER</option>
                            <option value="7">PROYECTOS</option>
                            <option value="8">JEFATURAS</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="numero" class="form-label">Número</label>
                        <input type="text" class="form-control" id="numero" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="extencion" class="form-label">Extensión</label>
                        <input type="text" class="form-control" id="extencion" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="idZona" class="form-label">Zona</label>
                        <select class="form-control" id="idZona" required>
                            <option value="1">Centro Sur</option>
                            <option value="2">Norte</option>
                            <option value="3">Occidente</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="text" class="form-control" id="celular" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-control" id="estado" required>
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar Usuario</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables2/js/moment.min.js"></script>
    <script src="~/lib/datatables2/js/datatables.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/views/usuarios.js"></script>
}
